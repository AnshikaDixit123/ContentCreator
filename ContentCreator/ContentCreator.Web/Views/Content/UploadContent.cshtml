@{
    ViewData["Title"] = "UploadContent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
        }

        .create-post-card {
            max-width: 600px;
            margin: 40px auto;
            border-radius: 16px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

            .create-post-card textarea {
                border-radius: 10px;
                resize: none;
            }

        #preview img,
        #preview video {
            margin-top: 15px;
            border-radius: 12px;
            max-height: 400px;
            width: 100%;
            object-fit: cover;
        }

        .post-card {
            max-width: 600px;
            margin: 20px auto;
            border-radius: 16px;
            background: #fff;
            padding: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .post-header {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

            .post-header img {
                border-radius: 50%;
                width: 40px;
                height: 40px;
                margin-right: 10px;
            }

        .post-actions {
            display: flex;
            justify-content: space-around;
            padding-top: 10px;
            border-top: 1px solid #eee;
            margin-top: 10px;
        }

            .post-actions button {
                border: none;
                background: none;
                font-weight: 500;
                color: #555;
                cursor: pointer;
            }

                .post-actions button:hover {
                    color: #0d6efd;
                }

        .comment-box {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .comment-box input {
                border-radius: 20px;
                flex: 1;
                padding: 8px 15px;
                border: 1px solid #ccc;
            }

            .comment-box button {
                margin-left: 8px;
                border-radius: 20px;
                padding: 6px 15px;
            }

        .post-options {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin: 10px 0 20px;
            gap: 10px;
        }

            .post-options label {
                font-weight: 500;
            }

            .post-options select {
                width: auto;
            }
    </style>
</head>
<body>
    <!-- Create Post -->
    <div class="create-post-card">
        <h5 class="mb-3">Create a New Post</h5>
        <form id="postForm">
            <!-- Post text -->
            <textarea class="form-control mb-3" id="postContent" rows="3" placeholder="What's on your mind?" required></textarea>

            <!-- Upload file -->
            <input type="file" class="form-control mb-3" id="mediaFile" accept="image/*,video/*">

            <!-- Preview -->
            <div id="preview" class="mb-3"></div>

            <!-- Visibility Option -->
            <div class="post-options">
                <label for="visibility" class="form-label">Visibility:</label>
                <select class="form-select form-select-sm" id="visibility">
                    <option value="public">🌍 Public</option>
                    <option value="private">🔒 Private</option>
                    <option value="subscribed">⭐ Subscribed Only</option>
                </select>
            </div>

            <!-- Post Button -->
            <button type="submit" id="btnforPost" class="btn btn-success w-100">Post</button>
        </form>
    </div>

    <!-- Feed -->
    <div id="feed"></div>

    <script>
        const form = document.getElementById("postForm");
        const preview = document.getElementById("preview");
        const mediaFile = document.getElementById("mediaFile");
        const feed = document.getElementById("feed");
        const visibility = document.getElementById("visibility");

        let fileData = "";

        // Preview image/video
        mediaFile.addEventListener("change", function (event) {
          preview.innerHTML = "";
          let file = event.target.files[0];

          if (file) {
            let reader = new FileReader();
            reader.onload = function (e) {
              fileData = e.target.result;
              if (file.type.startsWith("image")) {
                preview.innerHTML = `<img src="${fileData}" alt="Preview">`;
              } else if (file.type.startsWith("video")) {
                preview.innerHTML = `<video controls><source src="${fileData}"></video>`;
              }
            };
            reader.readAsDataURL(file);
          }
        });

        // Create post
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          const text = document.getElementById("postContent").value;
          const vis = visibility.value;
          if (!text && !fileData) return;

          const post = document.createElement("div");
          post.className = "post-card";
          post.innerHTML = `
            <div class="post-header">
              <img src="https://via.placeholder.com/40" alt="user">
                     <div>
           <strong>User Name</strong> <br>
           <small>
               ${vis === "public" ? "🌍 Public" : vis === "private" ? "🔒 Private" : vis === "subscribed" ? "⭐ Subscribed Only" : ""}
           </small>
        </div>

            </div>
            <p>${text}</p>
            ${fileData ? (fileData.startsWith("data:video") ?
              `<video controls><source src="${fileData}"></video>` :
              `<img src="${fileData}" alt="post">`) : ""}
            <div class="post-actions">
              <button>👍 Like</button>
              <button>💬 Comment</button>
              <button>↗️ Share</button>
            </div>
            <div class="comment-box">
              <input type="text" placeholder="Write a comment...">
              <button class="btn btn-sm btn-primary">Send</button>
            </div>
          `;
          feed.prepend(post);

          // Reset
          form.reset();
          preview.innerHTML = "";
          fileData = "";
        });
    </script>
</body>
</html>
<script src="~/js/uploadcontent.js"></script>