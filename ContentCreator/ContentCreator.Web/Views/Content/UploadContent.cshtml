@{
    ViewData["Title"] = "UploadContent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .upload-content-section {
        background-color: #ffffff;
        border-radius: 0.5rem;
        max-width: 700px;
        margin: 1rem auto;
    }

    .post-options {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin: 10px 0 20px;
        gap: 10px;
    }

    .post-options label {
        font-weight: 500;
    }

    .post-options select {
        width: auto;
    }
    .post-card {
        max-width: 600px;
        margin: 20px auto;
        border-radius: 16px;
        background: #fff;
        padding: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .create-post-card textarea {
        border-radius: 10px;
        resize: none;
    }
    #filePreview img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin-top: 0.5rem;
    }

</style>
<div class="upload-content-section card shadow-sm p-4">
    <h4 class="mb-3">Create Post</h4>

    <!-- Post Description -->
    <div class="create-post-card">
        <h5 class="mb-3">Create a New Post</h5>
        <form id="postForm">
            <!-- Post text -->
            <textarea class="form-control mb-3" id="postContent" rows="3" placeholder="What's on your mind?" required></textarea>

            <!-- Upload file -->
            <!-- Upload file -->
            <div id="mediaSection" class="mb-3">
                <input type="file" class="form-control" id="mediaFile" accept="image/*,video/*">
            </div>

            <!-- Preview -->
            <div id="preview" class="mb-3"></div>

            <!-- Visibility Option -->
            <div class="post-options">
                <label for="visibility" class="form-label">Visibility:</label>
                <select class="form-select form-select-sm" id="visibility">
                    <option value="public">🌍 Public</option>
                    <option value="private">🔒 Private</option>
                    <option value="subscribed">⭐ Subscribed Only</option>
                </select>
            </div>

            <!-- Post Button -->
            <button type="button" id="btnforPost" class="btn btn-success w-100">Post</button>
        </form>
    </div>
</div>


