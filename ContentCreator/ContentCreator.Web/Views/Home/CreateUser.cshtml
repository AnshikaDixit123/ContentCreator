
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .profile-pic-container {
        position: relative;
        display: inline-block;
    }

    .btn

    .edit-icon-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.15);
    }

    .edit-icon-btn i {
        font-size: 14px;
    }
</style>
<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Create User</h4>
        <div class="col-lg-4 d-none">
            <div class="card text-center shadow-sm p-4">
                <div class="profile-pic-container">
                    <img id="profileImage" src=""
                         class="rounded-circle mx-auto mb-3"
                         alt="Profile Picture" width="120" height="120">
                    <input type="file" style="display:none" id="uploadImage" accept="image/*">
                    <div class="edit-icon-btn ShowForUser d-none" id="edit-profile">
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <h5 class="fw-bold mt-2" id="ProfileName">John Doe</h5>

                <div class="mt-4 text-start">
                    <label class="form-label fw-semibold ShowForUser d-none">Password</label>
                    <input type="password" id="password" class="form-control mb-3 block-spacebar ShowForUser d-none" placeholder="Enter current password">
                    <label class="form-label fw-semibold">New Password</label>
                    <input type="password" id="newPassword" class="form-control mb-3 block-spacebar" placeholder="Enter new password">
                    <label class="form-label fw-semibold">Confirm Password</label>
                    <input type="password" id="confirmPassword" class="form-control mb-3 block-spacebar" placeholder="Confirm new password">
                    <button class="btn btn-primary w-100 mt-2" id="changePassword">Change Password</button>
                </div>
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-lg-12">
            <div class="card shadow-sm p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">User Name</label>
                        <input type="text" class="form-control" id="UserName" placeholder="username">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Email Address</label>
                        <input type="email" class="form-control" id="EmailAddress" placeholder="email@example.com">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">First Name</label>
                        <input type="text" class="form-control" id="FirstName" placeholder="First name">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Last Name</label>
                        <input type="text" class="form-control" id="LastName" placeholder="Last name">

                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Phone Number</label>
                        <input type="text" class="form-control" id="PhoneNumber" placeholder="+91 99999 99999">
                    </div>
                    
                    <div class="col-md-6">
                        <label for="RoleName" class="form-label fw-semibold">Role Name</label>
                        <select class="form-control" id="RoleName"></select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="text" class="form-control" id="Password" placeholder="password">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Confirm Password</label>
                        <input type="text" class="form-control" id="ConfirmPassword" placeholder="confirmPassword">
                    </div>
                    <div class="col-12" style="display: flex; justify-content: flex-end;">
                        <button type="button" id="createUser" class="btn btn-primary">Create User</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/createuser.js"></script>


