
@{
    ViewData["Title"] = "Region";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .gotostate,
    .gotocity {
        cursor: pointer;
    }
</style>

<div class="container my-5"id ="CountrySection">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Country</h4>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="countryInput" class="form-label fw-bold">Country</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="countryInput" class="form-control w-auto" placeholder="Enter country name">
                        <input type="text" id="countryCodeInput" class="form-control w-auto" placeholder="Enter country code">
                        <input type="text" id="phoneCodeInput" class="form-control w-auto" placeholder="Enter phone code">
                        <button class="btn btn-success" id="btnAddCountry">Add Country</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="countryTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Country Name</th>
                            <th>Country Code</th>
                            <th>Phone Code</th>
                            <th>State Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblCountryListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container my-5 d-none" id="StateSection">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">State</h4>
            <button class="btn btn-success backtocountry">Back</button>
        </div>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Country</label>
                    <select class="form-control" id="ddlCountryOnState">
                        <option value="">Select Country</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="card p-4 shadow-sm" id="addStateSection">                
                <div class="mb-3">
                    <label for="stateInput" class="form-label fw-bold">State</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="stateInput" class="form-control w-auto" placeholder="Enter state name">
                        <input type="text" id="stateCodeInput" class="form-control w-auto" placeholder="Enter state code">
                        <button class="btn btn-success" id="btnAddState">Add State</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="stateTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>State Name</th>
                            <th>State Code</th>
                            <th>City Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblStateListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container my-5 d-none" id="CitySection">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">City</h4>
            <button class="btn btn-success backtostate">Back</button>
        </div>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Country</label>
                        <select class="form-control" id="ddlCountryOnCity">
                            <option value="">Select Country</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">State</label>
                        <select class="form-control" id="StateforCity">
                            <option value="">Select State</option>
                        </select>
                    </div>
                </div>
            </div>
            <br />
            <div class="card p-4 shadow-sm" id="addCitySection">
                <div class="mb-3">
                    <label for="cityInput" class="form-label fw-bold">City</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="cityInput" class="form-control w-auto" placeholder="Enter city name">
                        <button class="btn btn-success" id="btnAddCity">Add City</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="cityTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>City Name</th>
                        </tr>
                    </thead>
                    <tbody id="tblCityListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/region.js"></script>