
@{
    ViewData["Title"] = "Region";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .gotostate,
    .gotocity {
        cursor: pointer;
    }
</style>

<div class="container my-5"id ="CountrySection">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Country</h4>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="countryDropdown" class="form-label fw-bold">Country</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="countryInput" class="form-control w-auto" placeholder="Enter country name">

                        <!-- Create user button -->
                        <button class="btn btn-success" id="btnCreate">Add Country</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="countryTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Country Name</th>
                            <th>Country Code</th>
                            <th>Phone Code</th>
                            <th>State Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblCountryListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container my-5 d-none" id="StateSection">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">State</h4>
            <button class="btn btn-success backtocountry">Back</button>
        </div>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="stateDropdown" class="form-label fw-bold">State</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="stateInput" class="form-control w-auto" placeholder="Enter state name">

                        <!-- Create user button -->
                        <button class="btn btn-success" id="btnCreate">Add State</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="stateTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>State Name</th>
                            <th>State Code</th>
                            <th>City Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblStateListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container my-5 d-none" id="CitySection">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0">City</h4>
            <button class="btn btn-success backtostate">Back</button>
        </div>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="cityDropdown" class="form-label fw-bold">City</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="cityInput" class="form-control w-auto" placeholder="Enter city name">

                        <!-- Create user button -->
                        <button class="btn btn-success" id="btnCreate">Add City</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="cityTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>City Name</th>
                        </tr>
                    </thead>
                    <tbody id="tblCityListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/region.js"></script>