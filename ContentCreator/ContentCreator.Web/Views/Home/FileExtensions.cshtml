
@{
    ViewData["Title"] = "FileExtensions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5" id="FileExtension">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">File Extensions</h4>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-2">
                    <label for="fileType" class="form-label fw-bold">File Type</label>
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <select class="form-select w-auto" id="fileTypeSelect" style="min-width: 120px; height: 38px;">
                            <option value="">Select File Type</option>
                        </select>
                        <input type="text" id="fileExtensionInput" class="form-control w-auto block-spacebar" readonly placeholder="File Extension" style="min-width: 100px; height: 38px;">
                        <input type="text" id="minimumSizeInput" class="form-control w-auto numOnly" readonly placeholder="Mininum size input" style="min-width: 80px; height: 38px;">
                        <input type="text" id="maximumSizeInput" class="form-control w-auto numOnly" readonly placeholder="Maximum size input" style="min-width: 80px; height: 38px;">

                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="isActive" id="isActiveYes" diabled value="true">
                            <label class="form-check-label small" for="isActiveYes">Active</label>
                        </div>
                        <div class="form-check form-check-inline mb-0">
                            <input class="form-check-input" type="radio" name="isActive" id="isActiveNo" value="false" checked>
                            <label class="form-check-label small" for="isActiveNo">Inactive</label>
                        </div>

                        <button class="btn btn-success flex-shrink-0 px-4" disabled id="btnAddFileExtension" style="height: 38px;">Add</button>
                    </div>
                </div>
            </div>


            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="FileExtensionTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>File Type</th>
                            <th>File Extension</th>
                            <th>Minimum Size(kb)</th>
                            <th>Maximum Size(kb)</th>
                            <th>IsActive</th>
                        </tr>
                    </thead>
                    <tbody id="tblFileTypeListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/fileextensions.js"></script>


