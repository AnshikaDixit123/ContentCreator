
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Roles</h4>
        <div class="container mt-4">
            <div class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="roleDropdown" class="form-label fw-bold">Role name</label>
                    <div class="d-flex gap-3 align-items-center">
                        <input type="text" id="roleInput" class="form-control w-auto" placeholder="Enter role name">

                        <!-- Radio buttons -->
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="activeRadio" value="Active" checked>
                            <label class="form-check-label" for="activeRadio">Active</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="inactiveRadio" value="Inactive">
                            <label class="form-check-label" for="inactiveRadio">Inactive</label>
                        </div>

                        <!-- Create user button -->
                        <button class="btn btn-success" id="btnCreate">Create Roles</button>
                    </div>
                </div>
            </div>

            <!-- Table section -->
            <div class="card p-3 mt-4 shadow-sm">
                <table id="roleTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Role Name</th>
                            <th> Number of Users</th>
                            <th>Role Description</th>
                            <th>Role Type</th>
                            <th>IsProtected</th>
                            <th>Allowed Extensions</th>
                        </tr>
                    </thead>
                    <tbody id="tblRolesListBody">
                        <!-- Rows will be filled dynamically (DataTable / API) -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Trigger Button -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSubscriptionModal">
    Assign
</button>

<!-- Modal -->
<div class="modal fade" id="createSubscriptionModal" tabindex="-1" aria-labelledby="createSubscriptionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="createSubscriptionLabel">Create Subscription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <label for="allUsersInput" class="form-label">All Users</label>
                <input type="text" class="form-control" id="allUsersInput" placeholder="Select users">
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="subscribeBtn">Subscribe</button>
            </div>

        </div>
    </div>
</div>

<!-- Bootstrap JS (make sure included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional: handle subscribe button click -->
<script>
     var modal = bootstrap.Modal.getInstance(document.getElementById('createSubscriptionModal'));
        modal.show();
    document.getElementById('subscribeBtn').addEventListener('click', function() {
        let users = document.getElementById('allUsersInput').value;
        console.log('Subscribed users:', users);
        // Add your API call here
        var modal = bootstrap.Modal.getInstance(document.getElementById('createSubscriptionModal'));
        modal.hide(); // close modal
    });
</script>

<script src="~/js/roles.js"></script>


