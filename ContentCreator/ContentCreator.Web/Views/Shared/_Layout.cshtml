<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test : @ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/image/app-logo.png" />
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/lib/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery-3.7.1.min.js"></script>
</head>
<body>
    <header>
        <div class="d-flex align-items-center gap-3">
            <img src="~/image/app-logo.png" alt="Logo" class="logo-image" />
        </div>
        <div class="d-flex align-items-center gap-4">
            <div class="menu-group">
                <div class="menu-item">
                    <button class="btn btn-outline-primary">Settings</button>
                    <div class="submenu">
                        <a href="/home/createuser">Create User</a>
                        <a href="/home/roles">Roles</a>
                        <a href="#">Option 3</a>
                    </div>
                </div>
                <div class="menu-item">
                    <button class="btn btn-outline-primary">Menu 2</button>
                    <div class="submenu">
                        <a href="#">Option 1</a>
                        <a href="#">Option 2</a>
                        <a href="#">Option 3</a>
                    </div>
                </div>
                <div class="menu-item">
                    <button class="btn btn-outline-primary">Menu 3</button>
                    <div class="submenu">
                        <a href="#">Option 1</a>
                        <a href="#">Option 2</a>
                        <a href="#">Option 3</a>
                    </div>
                </div>
            </div>
            <div class="position-relative profile-menu">
                <img src="~/image/app-avatar-default.png" id="AvatarImage" alt="User" class="rounded-circle" width="40" height="40" />
                <div class="profile-submenu">
                    <a href="#">Profile</a>
                    <a href="javascript: void(0);">Settings</a>
                    <a href="javascript: void(0);" id="btnLogout">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Main content here -->
        @RenderBody()
    </main>

    <footer class="d-flex justify-content-center align-items-center" style="height: 56px;">
        <p class="mb-0">&copy; 2025 Your Website. All rights reserved.</p>
    </footer>
</body>
<script src="~/lib/jquery/sweetalert2.min.js"></script>
</html>