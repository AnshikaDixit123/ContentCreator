<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="icon" type="image/png" href="~/image/app-logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery-3.7.1.min.js"></script>
    <style>
        :root {
            --main-bg: #f6f9fc;
            --primary-color: #BEBEBE;
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: var(--main-bg);
            font-family: 'Segoe UI', sans-serif;
            scroll-behavior: smooth;
        }

        .full-page {
            display: flex;
            flex-direction: row;
            height: 100vh;
            overflow: hidden;
            flex-wrap: wrap;
        }

        .left, .right {
            width: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .left {
            background-color: #F0F0F0;
            padding: 20px;
        }

        .right img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background-color: #FFFFFF;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: var(--primary-color);
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            top: 72%;
            right: 12px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        .form-scroll-container {
            max-height: 100vh; /* limit height to viewport */
            overflow-y: auto; /* enable vertical scroll */
            padding-right: 10px; /* prevent scrollbar overlap */
        }


        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: dimgrey;
            }
        @@media (max-width: 768px) {
            .full-page

        {
            flex-direction: column;
            height: auto;
        }

        .left, .right {
            width: 100%;
            height: auto;
        }

        .right {
            order: -1;
        }

            .right img {
                height: 200px;
                object-fit: cover;
            }

        .form-box {
            padding: 30px 20px;
        }

        }
    </style>
</head>
<body>
    <div class="full-page">
        <!-- Left Form -->
        @RenderBody()

        <!-- Right Image -->
        <div class="right">
            <img src="~/image/image1.jpg" />
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById("togglePassword");
        const password = document.getElementById("password");

        togglePassword.addEventListener("click", function () {
          const type = password.getAttribute("type") === "password" ? "text" : "password";
          password.setAttribute("type", type);
          this.classList.toggle("bi-eye");
          this.classList.toggle("bi-eye-slash");
        });
    </script>
    <script src="~/lib/jquery/sweetalert2.min.js"></script>
</body>
</html>
